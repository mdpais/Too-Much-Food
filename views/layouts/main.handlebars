<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Too Much Food</title>
    {{! <link rel="stylesheet" href="/css/global.css" /> }}
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@2.50.1/dist/full.css"
      rel="stylesheet"
      type="text/css"
    />
    <script defer src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div>
      <header>
        <nav class="flex justify-between p-3">
          <div class="flex gap-2">
            <a href="/" class="text-3xl">
              <h1 class="text-3xl">Too Much Food</h1>
            </a>
            <a href="/menu">
              <button class="btn btn-primary" id="menuBtn">menu</button>
            </a>
            <a href="/orders">
              <button class="btn btn-primary" id="ordersBtn">orders</button>
            </a>
            <a href="/report">
              <button class="btn btn-primary" id="reportBtn">report</button>
            </a>
          </div>
          {{#if isLogged}}
            <div>
              <button class="btn btn-primary" id="signout">sign out</button>
            </div>
          {{else}}
            <div>
              <a href="/signin">
                <button class="btn btn-primary mb-3" id="signinBtn">sign in</button>
              </a>
              <a href="/signup">
                <button class="btn btn-primary" id="signupBtn">sign up</button>
              </a>
            </div>
          {{/if}}
        </nav>
      </header>
      <main class="container mx-auto mt-5">
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    {{#if isLogged}}
      <script src="/js/auth/signout.js"></script>
    {{/if}}
  </body>

</html>