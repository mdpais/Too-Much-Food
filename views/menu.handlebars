<div class="grid sm:grid-cols-1 md:grid-cols-2">

  <div class="md:sticky md:top-4 align-middle">
    <div class="py-6 flex flex-col justify-center sm:py-12 md:sticky md:top-4">
      <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div
          class="absolute inset-0 bg-gradient-to-r from-amber-700 to-amber-800 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"
        >
        </div>
        <div class="relative px-4 py-10 bg-amber-600 shadow-lg sm:rounded-3xl sm:p-20">
          <div class="max-w-md mx-auto">
            <div>
              <h2 id="createHead" class="text-2xl font-semibold">Create New Menu Item</h2>
              <h2 style="display:none;" id="editHead" class="text-2xl font-semibold">Modify Menu Item</h2>
            </div>
            <div class="divide-y">
              <form class="py-8 text-base leading-6 space-y-4 sm:leading-7">
                <label class="block">
                  <span class="label-text">Name:</span>
                  <input
                    id="item"
                    type="text"
                    placeholder="Name"
                    class="input input-primary w-full max-w-xs"
                  />
                </label>
                <label class="block">
                  <span class="label-text">Price:</span>
                  <input
                    id="price"
                    type="text"
                    placeholder="Price"
                    class="input input-primary w-full max-w-xs"
                  />
                </label>
                <label class="flex justify-center">
                  <span class="label-text align-middle">Inactive</span>
                  <input id="isActive" type="checkbox" class="toggle align-middle mx-1" />
                  <span class="label-text align-middle">Active</span>
                </label>
                <div class="flex justify-evenly">
                  <button id="createItemBtn" class="btn btn-primary">Create</button>
                  <button style="display:none;" id="editItemBtn" class="btn btn-primary">Save</button>
                  <button style="display:none;" id="cancelBtn" class="btn btn-primary">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1">
    {{#each menuItems as |menuItem|}}
        <div class="card card-side glass m-3 shadow-md hover:shadow-xl">
        <div class="card-body flex">
          <button id="edit-{{menuItem.id}}" class="btn btn-primary editBtn"><p id="item-{{menuItem.id}}">{{menuItem.item}}</p></button>
          <table width="100%"><tbody><tr>
            <td><p id="price-{{menuItem.id}}">Price: {{format_currency menuItem.price}}</p></td>
            <td style="text-align:right"><p id="active-{{menuItem.id}}">{{#if menuItem.active}}Active{{else}}Inactive{{/if}}</p></td>
          </tr></tbody></table>
        </div>
        </div>
    {{else}}
      <div>No menu found!</div>
    {{/each}}
  </div>

</div>

<script defer src="/js/menu.js"></script>